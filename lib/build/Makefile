# GNU Make solution makefile autogenerated by Premake
# Type "make help" for usage help

ifndef config
  config=debug
endif
export config

PROJECTS := nanovg example_gl2

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

nanovg: 
	@echo "==== Building nanovg ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f nanovg.make

example_gl2: nanovg
	@echo "==== Building example_gl2 ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f example_gl2.make


clean:
	@${MAKE} --no-print-directory -C . -f nanovg.make clean
	@${MAKE} --no-print-directory -C . -f example_gl2.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug"
	@echo "   release"
	@echo "   debug64"
	@echo "   release64"
	@echo "   debug32"
	@echo "   release32"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   nanovg"
	@echo "   example_gl2"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
